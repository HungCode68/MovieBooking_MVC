@model List<MovieBookingMVC.Models.Movies>

@{
    ViewData["Title"] = "Home";
}

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Movie Booking - Home</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/slick-carousel/1.8.1/slick.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/slick-carousel/1.8.1/slick-theme.min.css">
    <style>
        body {
            background-color: #141414;
            color: white;
        }

        .banner {
            position: relative;
            background: url('https://designercomvn.s3.ap-southeast-1.amazonaws.com/wp-content/uploads/2017/07/26020212/poster-phim-hanh-dong.jpg') center/cover no-repeat;
            height: 500px;
        }

        .banner-content {
            position: absolute;
            bottom: 20px;
            left: 20px;
        }

        /* Style cho phần movie */
        .movie-item {
            position: relative;
            width: 210px;
            height: 300px;
            overflow: hidden;
            border-radius: 8px;
            transition: transform 0.3s;
        }

            .movie-item img {
                width: 100%;
                height: 100%;
                object-fit: cover;
            }

            .movie-item:hover {
                transform: scale(1.05);
            }

        /* Hiển thị overlay khi hover */
        .movie-overlay {
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background: rgba(0, 0, 0, 0.7);
            display: flex;
            flex-direction: column;
            justify-content: center;
            align-items: center;
            opacity: 0;
            transition: opacity 0.3s;
        }

        .movie-item:hover .movie-overlay {
            opacity: 1;
        }

        .movie-title {
            font-size: 16px;
            font-weight: bold;
            text-align: center;
            margin-bottom: 10px;
        }

        .btn-movie {
            background-color: red;
            color: white;
            border: none;
            padding: 5px 10px;
            margin: 5px;
            cursor: pointer;
            border-radius: 5px;
            transition: background 0.3s;
            text-decoration: none;
        }

            .btn-movie:hover {
                background-color: darkred;
            }
    </style>
</head>
<body>

    <div class="banner">
        <div class="banner-content">
            <h1>MOVIE SELECTION</h1>
            <button class="btn btn-danger">Watch Now</button>
        </div>
    </div>

